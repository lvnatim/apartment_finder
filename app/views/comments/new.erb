<div id="overlay" style="opacity: 0.5;"></div>

<div id="contents" class="text-center"> 
  <div class="create-form-container">
    <div>
      <% if @comment && @comment.errors.any? %>
        <div>
          <ul>
            <% @comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <% @listing.comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.user.username %> rated <%= comment.rating %> and wrote: </p>
        <p><%= comment.content %></p>
      </div>
    <% end %>

    <div id="divform">
      <h1 class="h1">Post a Comment</h1>
      <form method="post" action="/comments" class="form-horizontal">
          <input type="hidden" value="<%= @listing.id %>" name="listing_id">
          <input type="hidden" value="<%= current_user.id %>" name="user_id">
          <div class="form-group">
            <textarea placeholder="Your comments" type="textarea" name="content" class="form-control input-lg" value="" rows="4" ></textarea>
          </div>
          <div class="form-group">
            <select class="form-control" name="rating">
              <option>Your rating:</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>

        <div class="footer text-center">
          <input class="btn btn-warning" type="submit">
        </div>
      </form>
    </div>
  </div>
</div>
