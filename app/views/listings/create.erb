<div id="overlay" style="opacity: 0.5;"></div>

<div id="contents" class="text-center"> 

<div class="create-form-container">
  <div>
    <% if @listing && @listing.errors.any? %>
      <div>
        <ul>
          <% @listing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>


<div id="divform">
  <h1 class="h1">Post a listing</h1>
  <form enctype="multipart/form-data" method="post" action="/listings" values="<%= current_user.id %>" class="form-horizontal">

      <div class="form-group">
        <input placeholder="Street address:" type="text" name="street_address" class="form-control input-lg" value="<%= @listing && @listing.street_address %>">
      </div>
      <div class="form-group">
        <input placeholder="Monthly rent:" type="text" name="price" class="form-control input-lg" value="<%= @listing && @listing.price %>">
      </div>
      <div class="form-group">
        <input placeholder="Square feet:" type="text" name="area" class="form-control input-lg" value="<%= @listing && @listing.area %>">
      </div>
      <div class="form-group">
        <input placeholder="No. of bedrooms" type="text" name="bedrooms" class="form-control input-lg" value="<%= @listing && @listing.bedrooms %>">
      </div>
      <div class="form-group">
        <input placeholder="No. of bathrooms" type="text" name="bathrooms" class="form-control input-lg" value="<%= @listing && @listing.bathrooms %>">
      </div>

      <div class="form-group">
        <input id="fileupload" type="file" name="image" />
      </div>

    <div class="footer text-center">
      <input class="btn btn-warning" type="submit" name="submit">
    </div>
  </form>
</div>

</div>
</div>
