<div id="overlay" style="opacity: 0.5;"></div>

<div id="contents" class="text-center"> 
  <div class="row">
    <% if @user && @user.errors %>
      <div class="style-error-box">
        <% @user.errors.full_messages.each do |message| %>
            <div class = "row">
              <div class="col-md-4"></div>
              <div class="col-md-4">
                <div class="alert alert-danger">
                  <%= message %>
                </div>
              </div>
              <div class="col-md-4"></div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div id="divform">
    <h1 class="h1"> Login </h1>
    <br />
    <form method="post" action="/user/login" class="form-horizontal">
      <div class="form-group">
        <input class="form-control input-lg" type="text" id="username" value="<%= @user&&@user.username %>" placeholder="Username" name="username">
      </div>
      <div class="form-group">  
        <input class="form-control input-lg" type="password" id="password" value="<%= @user&&@user.password %>" placeholder="Password" name="password">
      </div>
      <div class="footer text-center">
        <button class="btn btn-warning" type="submit">Submit</button>
        <br>
        <br>
        <a class="layout return" href="/">Actually, I don't want to log in.</a>
      </div>
    </form>
  </div>
</div>

